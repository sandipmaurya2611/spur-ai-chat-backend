{
    "name": "chat-backend",
    "version": "1.0.0",
    "description": "Production backend for AI chat support agent",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "db:setup": "psql -U postgres -d chatdb -f src/db/schema.sql"
