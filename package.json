        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "pg": "^8.16.3",
        "telescope": "^0.2.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.4",
        "@types/pg": "^8.16.0",
        "@types/uuid": "^9.0.7",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}
